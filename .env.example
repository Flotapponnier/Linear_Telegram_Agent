# ===========================================
# Linear Telegram Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ---------- Telegram Configuration ----------
# Your Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of Telegram usernames allowed to use the bot (without @)
TELEGRAM_ALLOWED_USERNAMES=user1,user2,user3

# Admin username for error notifications (without @)
TELEGRAM_ADMIN_USERNAME=admin_username

# Optional: Admin chat ID for direct error notifications
TELEGRAM_ADMIN_CHAT_ID=

# ---------- Linear Configuration ----------
# Your Linear API key (get from Linear Settings > API)
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxxxxxx

# Your Linear team ID (found in team settings URL)
LINEAR_TEAM_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Your Linear workspace slug (e.g., "mycompany" for linear.app/mycompany/...)
LINEAR_WORKSPACE_SLUG=mycompany

# Ticket prefix used by your Linear team (e.g., "ENG" for ENG-1234)
LINEAR_TICKET_PREFIX=TEAM

# Linear API URL (usually no need to change)
LINEAR_API_URL=https://api.linear.app/graphql

# Optional: Linear webhook signing secret (for webhook verification)
LINEAR_SIGNING_SECRETS=

# ---------- Redis Configuration ----------
# Redis connection URL
REDIS_URL=redis://localhost:6379

# ---------- OpenAI Configuration ----------
# OpenAI API key for AI-powered command parsing
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# ---------- Bot Branding (Optional) ----------
# Custom name for your bot (shown in welcome messages)
BOT_BRAND_NAME=Linear Tracker Bot

# ---------- Server Configuration ----------
# Port for the webhook server
PORT=4000
